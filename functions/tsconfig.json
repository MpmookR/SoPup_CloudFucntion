{
  "compilerOptions": {
    "module": "commonjs",             // required by Firebase Functions runtime
    "target": "es2020",               // modern but safe
    "esModuleInterop": true,
    "moduleResolution": "node",       // standard resolution
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",                  // output directory
    "rootDir": "src",                 // source directory
    "sourceMap": true,
    "strict": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
